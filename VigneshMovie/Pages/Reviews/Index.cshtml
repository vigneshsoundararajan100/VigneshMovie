@page
@model VigneshMovie.Pages.Reviews.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Movies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Review)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.PersonName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Movies.MovieName)
                </td>
                <td>
                    <a class="btn btn-primary"asp-page="./Edit" asp-route-id="@item.ReviewId">Edit</a> |
                    <a class="btn btn-secondary"asp-page="./Details" asp-route-id="@item.ReviewId">Details</a> |
                    <a class="btn btn-danger"asp-page="./Delete" asp-route-id="@item.ReviewId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
