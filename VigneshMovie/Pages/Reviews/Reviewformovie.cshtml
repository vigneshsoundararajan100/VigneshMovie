@page
@model VigneshMovie.Pages.Reviews.ReviewformovieModel
@{
    ViewData["Title"] = "Reviewformovie";
}

<h1>Reviewformovie</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Movies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Review)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.PersonName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Movies.MovieName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ReviewId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ReviewId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ReviewId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
