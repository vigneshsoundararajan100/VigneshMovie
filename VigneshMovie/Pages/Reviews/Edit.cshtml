@page
@model VigneshMovie.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.ReviewId" />
            <div class="form-group">
                <label asp-for="Review.Person.PersonName" class="control-label"></label>
                <select asp-for="Review.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="Review.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Comments" class="control-label"></label>
                <input asp-for="Review.Comments" class="form-control" />
                <span asp-validation-for="Review.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Movies.MovieName" class="control-label"></label>
                <select asp-for="Review.MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="Review.MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
